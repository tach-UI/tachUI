{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "exactOptionalPropertyTypes": true, // Temporarily disabled for build compatibility

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@tachui/core": ["./packages/core/dist/index.d.ts"],
      "@tachui/core/*": ["./packages/core/dist/*"],
      "@tachui/primitives": ["./packages/primitives/dist/index.d.ts"],
      "@tachui/primitives/*": ["./packages/primitives/dist/*"],
      "@tachui/forms": ["./packages/forms/dist/index.d.ts"],
      "@tachui/forms/*": ["./packages/forms/dist/*"],
      "@tachui/navigation": ["./packages/navigation/dist/index.d.ts"],
      "@tachui/navigation/*": ["./packages/navigation/dist/*"],
      "@tachui/symbols": ["./packages/symbols/dist/index.d.ts"],
      "@tachui/symbols/*": ["./packages/symbols/dist/*"],
      "@tachui/mobile": ["./packages/mobile/dist/index.d.ts"],
      "@tachui/mobile/*": ["./packages/mobile/dist/*"],

      "@tachui/devtools": ["./packages/devtools/dist/index.d.ts"],
      "@tachui/devtools/*": ["./packages/devtools/dist/*"],
      "@tachui/cli": ["./packages/cli/dist/index.d.ts"],
      "@tachui/cli/*": ["./packages/cli/dist/*"],
      "@tachui/eslint-plugin": ["./packages/eslint-plugin-tachui/dist/index.d.ts"],
      "@tachui/eslint-plugin/*": ["./packages/eslint-plugin-tachui/dist/*"],
      "@tachui/registry": ["./packages/registry/dist/index.d.ts"],
      "@tachui/registry/*": ["./packages/registry/dist/*"]
    }
  },
  "include": [],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/registry" },
    { "path": "./packages/primitives" },
    { "path": "./packages/forms" },
    { "path": "./packages/navigation" },
    { "path": "./packages/symbols" },
    { "path": "./packages/mobile" },
    { "path": "./packages/devtools" },
    { "path": "./packages/cli" },
    { "path": "./packages/eslint-plugin-tachui" }
  ]
}
