{
  "name": "@tachui/mobile",
  "version": "0.8.0-alpha",
  "description": "Mobile UI components for TachUI - Modal components (ActionSheet, Alert) and enhanced scrolling (ScrollView) with mobile optimizations",
  "homepage": "https://tachui.dev/",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./modifiers": {
      "types": "./dist/modifiers/index.d.ts",
      "import": "./dist/modifiers/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && vite build && tsc -p tsconfig.build.json",
    "build:dev": "rm -rf dist && vite build --mode development && tsc -p tsconfig.build.json",
    "build:prod": "rm -rf dist && vite build --mode production && tsc -p tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json",
    "valid": "clear && vitest run && pnpm type-check && pnpm lint && pnpm build",
    "dev": "vite build --watch",
    "lint": "oxlint src",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "type-check": "tsc --project tsconfig.type-check.json"
  },
  "peerDependencies": {
    "@tachui/core": "^0.8.0-alpha",
    "@tachui/registry": "^0.8.0-alpha"
  },
  "devDependencies": {
    "@tachui/core": "workspace:*",
    "@tachui/registry": "workspace:*",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tachui/modifiers": "workspace:*"
  },
  "keywords": [
    "ui",
    "mobile",
    "actionsheet",
    "alert",
    "scrollview",
    "modal",
    "pull-to-refresh",
    "touch",
    "tachui",
    "plugin"
  ],
  "author": "tachUI Team",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tach-UI/tachUI",
    "directory": "packages/mobile"
  }
}
