{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@tachui/core": ["../core/src"],
      "@tachui/primitives": ["../primitives/src"],
      "@tachui/forms": ["../forms/src"],
      "@tachui/navigation": ["../navigation/src"],
      "@tachui/symbols": ["../symbols/src"],
      "@tachui/cli": ["../cli/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "__tests__"],
  "references": [{ "path": "../core" }, { "path": "../primitives" }]
}
