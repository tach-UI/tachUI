{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@tachui/core": ["../core/dist"],
      "@tachui/primitives": ["../primitives/dist"],
      "@tachui/forms": ["../forms/dist"],
      "@tachui/navigation": ["../navigation/dist"],
      "@tachui/symbols": ["../symbols/dist"],
      "@tachui/cli": ["../cli/dist"],
      "@tachui/registry": ["../registry/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.bench.ts", "node_modules", "dist"]
}
