{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tachui/core": ["../core/dist/index.d.ts"],
      "@tachui/core/*": ["../core/dist/*"],
      "@tachui/registry": ["../registry/dist/index.d.ts"],
      "@tachui/registry/*": ["../registry/dist/*"]
    }
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["dist", "node_modules"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
