{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "__tests__"],
  "references": [{ "path": "../core" }]
}
