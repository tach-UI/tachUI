{
  "name": "@tachui/advanced-forms",
  "version": "0.1.0",
  "description": "Advanced form components plugin for TachUI - DatePicker, Stepper, Slider",
  "homepage": "https://tachui.dev/",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rm -rf dist && vite build",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "echo 'Type checking disabled for plugin - using runtime validation from @tachui/core'"
  },
  "dependencies": {
    "@tachui/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "ui",
    "forms",
    "datepicker",
    "stepper",
    "slider",
    "tachui",
    "plugin"
  ],
  "author": "tachUI Team",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tach-UI/tachUI",
    "directory": "packages/advanced-forms"
  }
}
