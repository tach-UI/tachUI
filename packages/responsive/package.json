{
  "name": "@tachui/responsive",
  "version": "1.0.0",
  "description": "Advanced responsive design patterns and utilities for tachUI framework",
  "homepage": "https://tachui.dev/",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./modifiers": {
      "types": "./dist/modifiers/index.d.ts",
      "import": "./dist/modifiers/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && vite build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ci": "npm run test:run",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "oxlint src"
  },
  "dependencies": {
    "@tachui/core": "workspace:*",
    "@tachui/modifiers": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jsdom": "^21.1.6",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.2.0",
    "typescript": "^5.2.0",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "ui",
    "responsive",
    "breakpoints",
    "media-queries",
    "container-queries",
    "responsive-design",
    "tachui",
    "typescript"
  ],
  "author": "tachUI Team",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tach-UI/tachUI",
    "directory": "packages/responsive"
  }
}
