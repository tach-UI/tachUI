{
  "name": "@tachui/cli",
  "version": "0.1.0",
  "description": "Tacho CLI - Comprehensive developer tooling for tachUI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tacho": "./bin/tacho.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest",
    "test:ci": "vitest run",
    "type-check": "tsc --noEmit",
    "lint": "oxlint src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tachui/core": "workspace:*",
    "commander": "^11.0.0",
    "chalk": "^5.0.0",
    "ora": "^7.0.0",
    "prompts": "^2.4.0",
    "fs-extra": "^11.0.0",
    "glob": "^10.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/prompts": "^2.4.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.2.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "cli",
    "tachui",
    "developer-tools",
    "code-generation",
    "scaffolding",
    "migration",
    "performance"
  ],
  "author": "tachUI Team",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/tachui/tachui",
    "directory": "packages/cli"
  }
}
