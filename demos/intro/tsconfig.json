{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2021", "ES2021.WeakRef", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@tachui/core": ["../../packages/core/dist/index.d.ts"],
      "@tachui/core/*": ["../../packages/core/dist/*"],
      "@tachui/responsive": ["../../packages/responsive/dist/index.d.ts"],
      "@tachui/responsive/*": ["../../packages/responsive/dist/*"],
      "@tachui/modifiers": ["../../packages/modifiers/dist/index.d.ts"],
      "@tachui/modifiers/*": ["../../packages/modifiers/dist/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts", "../../packages/core/dist/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
