{
  "name": "tachui",
  "version": "0.8.0-alpha",
  "description": "A SwiftUI-inspired web framework with SolidJS-style reactivity",
  "private": true,
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:dev": "clear && rm -rf dist node_modules/.vite-temp node_modules/.vite && pnpm -r build:dev",
    "build:prod": "pnpm -r build:prod",
    "build:clean": "clear && rm -rf dist node_modules/.vite-temp node_modules/.vite && pnpm test && pnpm lint && pnpm type-check && pnpm build:dev",
    "build:core": "pnpm --filter @tachui/core... build",
    "build:mobile": "pnpm --filter @tachui/mobile... build",
    "build:flow-control": "pnpm --filter @tachui/flow-control... build",
    "build:viewport": "pnpm --filter @tachui/viewport... build",
    "build:modifiers": "pnpm --filter @tachui/modifiers... build",
    "build:primitives": "pnpm --filter @tachui/primitives... build",
    "build:responsive": "pnpm --filter @tachui/responsive... build",

    "build:symbols": "pnpm --filter @tachui/symbols... build",
    "build:data": "pnpm --filter @tachui/data... build",
    "build:forms": "pnpm --filter @tachui/forms... build",
    "build:navigation": "pnpm --filter @tachui/navigation... build",
    "build:grid": "pnpm --filter @tachui/grid... build",
    "build:devtools": "pnpm --filter @tachui/devtools... build",
    "build:cli": "pnpm --filter @tachui/cli... build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest run",
    "test:stress": "vitest run --config vitest.stress.config.ts",
    "test:ci": "vitest run --config=vitest.ci.config.ts && pnpm -F @tachui/modifiers verify:tree-shaking",
    "test:long": "vitest run packages/core/__tests__/integration/long-running-simulation.test.ts packages/core/__tests__/security/malicious-plugin-detection.test.ts packages/core/__tests__/security/sandbox-security.test.ts",
    "test:error-recovery": "vitest run packages/core/__tests__/integration/error-recovery.test.ts",
    "test:coverage": "vitest run --coverage",
    "bench": "pnpm -r bench",
    "benchmark": "pnpm --filter @tachui/core benchmark",
    "benchmark:quick": "pnpm --filter @tachui/core benchmark:quick",
    "benchmark:compare": "pnpm --filter @tachui/core benchmark:compare",
    "benchmark:browser": "pnpm --filter @tachui/core benchmark:browser",
    "benchmark:browser:quick": "pnpm --filter @tachui/core benchmark:browser:quick",
    "benchmark:browser:report": "pnpm --filter @tachui/core benchmark:browser:report",
    "benchmark:report:combined": "tsx --tsconfig ./tools/benchmarks/tsconfig.benchmark.json ./tools/benchmarks/core-benchmark.ts",
    "benchmark:report": "pnpm benchmark:report:combined",
    "benchmark:navigation": "pnpm --filter @tachui/navigation benchmark",
    "benchmark:navigation:quick": "pnpm --filter @tachui/navigation benchmark:quick",
    "benchmark:navigation:bundle": "pnpm --filter @tachui/navigation benchmark:bundle",
    "benchmark:navigation:all": "pnpm --filter @tachui/navigation benchmark:all",
    "test:memory-leaks": "FORCE_MEMORY_TESTS=true vitest run packages/core/__tests__/integration/memory-leak-component.test.ts",
    "docs:dev": "cd docs/guide && pnpm dev",
    "docs:build": "cd docs/guide && pnpm build",
    "docs:api": "typedoc",
    "lint": "oxlint packages --import-plugin --ignore-pattern='**/__tests__/**' --ignore-pattern='**/*.test.*' --ignore-pattern='**/*.spec.*'",
    "lint:fix": "oxlint packages --import-plugin --ignore-pattern='**/__tests__/**' --ignore-pattern='**/*.test.*' --ignore-pattern='**/*.spec.*' --fix",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "dev:docs": "cd docs/guide && pnpm dev",
    "dev:core": "pnpm --filter @tachui/core dev",
    "dev:cli": "pnpm --filter @tachui/cli dev",
    "dev:navigation": "pnpm --filter @tachui/navigation dev",
    "dev:symbols": "pnpm --filter @tachui/symbols dev",
    "validate:workspace-aliases": "tsx tools/validate-workspace-aliases.ts",
    "validate:workspace-aliases:fix": "tsx tools/validate-workspace-aliases.ts --fix",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.21.0",
    "glob": "^10.4.5",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.0",
    "oxlint": "^1.12.0",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.19.1",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.8.0",
    "vite": "^7.1.1",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm type-check && pnpm test:ci"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "oxlint --fix"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "lucide": "^0.447.0"
  }
}
