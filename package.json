{
  "name": "tachui",
  "version": "0.1.0",
  "description": "A SwiftUI-inspired web framework with SolidJS-style reactivity",
  "private": true,
  "license": "MPL-2.0",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:clean": "clear && rm -rf dist node_modules/.vite-temp node_modules/.vite && pnpm test && pnpm lint && pnpm type-check && pnpm build",
    "build:core": "pnpm --filter @tachui/core build",
    "build:forms": "pnpm --filter @tachui/forms build",
    "build:navigation": "pnpm --filter @tachui/navigation build",
    "build:symbols": "pnpm --filter @tachui/symbols build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest run",
    "test:ci": "vitest run --config=vitest.ci.config.ts",
    "test:long": "vitest run packages/core/__tests__/integration/long-running-simulation.test.ts packages/core/__tests__/security/malicious-plugin-detection.test.ts packages/core/__tests__/security/sandbox-security.test.ts",
    "test:error-recovery": "vitest run packages/core/__tests__/integration/error-recovery.test.ts",
    "test:coverage": "vitest run --coverage",
    "bench": "pnpm -r bench",
    "benchmark": "pnpm --filter @tachui/core benchmark",
    "benchmark:quick": "pnpm --filter @tachui/core benchmark:quick",
    "benchmark:compare": "pnpm --filter @tachui/core benchmark:compare",
    "benchmark:browser": "pnpm --filter @tachui/core benchmark:browser",
    "benchmark:browser:quick": "pnpm --filter @tachui/core benchmark:browser:quick",
    "benchmark:navigation": "pnpm --filter @tachui/navigation benchmark",
    "benchmark:navigation:quick": "pnpm --filter @tachui/navigation benchmark:quick",
    "benchmark:navigation:bundle": "pnpm --filter @tachui/navigation benchmark:bundle",
    "benchmark:navigation:all": "pnpm --filter @tachui/navigation benchmark:all",
    "test:memory-leaks": "FORCE_MEMORY_TESTS=true vitest run packages/core/__tests__/integration/memory-leak-component.test.ts",
    "docs:dev": "cd docs/guide && pnpm dev",
    "docs:build": "cd docs/guide && pnpm build",
    "docs:api": "typedoc",
    "lint": "oxlint packages --ignore-pattern='**/__tests__/**' --ignore-pattern='**/*.test.*' --ignore-pattern='**/*.spec.*'",
    "lint:fix": "oxlint packages --ignore-pattern='**/__tests__/**' --ignore-pattern='**/*.test.*' --ignore-pattern='**/*.spec.*' --fix",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "dev:docs": "cd docs/guide && pnpm dev",
    "dev:core": "pnpm --filter @tachui/core dev",
    "dev:cli": "pnpm --filter @tachui/cli dev",
    "dev:navigation": "pnpm --filter @tachui/navigation dev",
    "dev:symbols": "pnpm --filter @tachui/symbols dev"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jsdom": "^23.2.0",
    "oxlint": "^1.12.0",
    "tsx": "^4.19.1",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.8.0",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
